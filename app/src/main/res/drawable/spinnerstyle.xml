<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disabled state -->
    <item android:state_enabled="false" android:drawable="@color/colorPrimaryDark"/>
    <!-- pressed state -->
    <item android:state_enabled="true" android:state_window_focused="true" android:state_pressed="true" android:drawable="@color/colorPrimary"/>
    <!-- unselected state -->
    <item android:state_enabled="true" android:state_window_focused="true" android:drawable="@color/grey"/>
    <!-- dropdown list state -->
    <item android:state_enabled="true" android:state_focused="true" android:drawable="@color/errorColor"/>
    <!-- default -->
    <item android:drawable="@color/green"/>
</selector>