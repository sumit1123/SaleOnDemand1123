<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.grocery.Activities.ForgotPassword">

    <androidx.appcompat.widget.Toolbar
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:clipToPadding="true"
        app:layout_scrollFlags="scroll|enterAlways"
        android:gravity="center"
        app:titleTextColor="@color/white"
        android:background="@color/colorPrimary"
        app:title="@string/forgot_password"
        app:popupTheme="@style/ToolbarTheme">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context="com.example.grocery.Activities.ForgotPassword">

        <LinearLayout
            android:id="@+id/visibilityemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.grocery.CustomViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter registered Email or Mobile number "
                android:textColor="@color/black"
                android:textSize="18dp" />

            <com.example.grocery.CustomViews.CustomEditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/linearLayout2"
                android:layout_below="@+id/or"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextselector"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/accountloginstart"
                android:gravity="center"
                android:hint="Enter Email/Phone"
                android:paddingStart="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <com.example.grocery.CustomViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="* Please make sure you enter correct Email/Mobile. Verification would be done by otp" />

            <com.example.grocery.CustomViews.CustomButton
                android:id="@+id/continuue"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonshape"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/visibilityotp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.example.grocery.CustomViews.CustomEditText
                android:id="@+id/otp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/linearLayout2"
                android:layout_below="@+id/or"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextselector"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:hint="Enter OTP"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <com.example.grocery.CustomViews.CustomButton
                android:id="@+id/submitOtp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttonshape"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/loaderBlurred"
        layout="@layout/blurredloader" />
</RelativeLayout>