<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.example.grocery.paymentpackage.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbarback" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context="com.example.grocery.paymentpackage.MainActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/tools"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                tools:context="com.example.grocery.paymentpackage.MainActivity">

                <LinearLayout
                    android:id="@+id/pricePetailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.example.grocery.CustomViews.CustomTextView
                        android:id="@+id/shakingtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="PRICE DETAILS"
                        android:textSize="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/backgroundfaint">

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/setquamtity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="price"
                            android:textColor="#000" />

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/setprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="15dp"
                            android:gravity="end"
                            android:textColor="#000" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/gstvisibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/gstText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Gst"
                            android:textColor="#000" />

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/setgst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:gravity="end"
                            android:textColor="#000" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/backgroundfaint">


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <com.example.grocery.CustomViews.CustomTextView

                            android:id="@+id/deliveryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="Delivery"
                            android:textColor="#000" />

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/setdelivery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:gravity="end"
                            android:textColor="#000" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/backgroundfaint">


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/totalAmountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Total Amount"
                            android:textColor="#000" />

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/settotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:gravity="end"
                            android:textColor="#000"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/promocodeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/promocodeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Promocode"
                            android:textColor="#000" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:cardBackgroundColor="#197319"
                            android:padding="10dp">


                            <RelativeLayout
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/clearPromocode"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:background="@drawable/close" />

                                <com.example.grocery.CustomViews.CustomTextView
                                    android:textColor="#FFF"
                                    android:id="@+id/setPromocodeName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_toEndOf="@+id/clearPromocode"
                                    android:text="AA10"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/backgroundfaint">

                    </LinearLayout>

                    <com.example.grocery.CustomViews.CustomTextView
                        android:id="@+id/savings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="You will save 199 on this order"
                        android:textColor="@color/green" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/promocodeVisibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <com.example.grocery.CustomViews.CustomTextView
                                android:id="@+id/promoMsg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@android:color/holo_red_light"
                                android:visibility="gone" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:visibility="gone">

                                <com.example.grocery.CustomViews.CustomEditText
                                    android:id="@+id/et_promocode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_toStartOf="@+id/etcheck"
                                    android:background="@drawable/edittextselector"
                                    android:paddingStart="10dp"
                                    android:textSize="12dp" />

                                <com.example.grocery.CustomViews.CustomButton
                                    android:id="@+id/etcheck"
                                    android:layout_width="100dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="10dp"
                                    android:background="@drawable/custom_border"
                                    android:text="Add"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="12dp" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/et_promocode"
                                android:background="#C5C5C5">

                            </LinearLayout>

                            <!--<LinearLayout-->
                            <!--android:id="@+id/layoutbuttons"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_below="@+id/et_promocode"-->
                            <!--android:layout_marginTop="10dp"-->
                            <!--android:orientation="horizontal"-->
                            <!--android:weightSum="10">-->

                            <!--<com.example.grocery.CustomViews.CustomTextView-->
                            <!--android:id="@+id/promoMsg"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginBottom="10dp"-->
                            <!--android:paddingRight="15dp"-->
                            <!--android:textColor="@android:color/holo_red_light" />-->

                            <!--<LinearLayout-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:orientation="horizontal">-->

                            <!--<com.example.grocery.CustomViews.CustomButton-->
                            <!--android:id="@+id/etcancel"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:layout_weight="5"-->
                            <!--android:background="@drawable/custom_border"-->
                            <!--android:fontFamily="@font/roboto"-->
                            <!--android:text="Cancel"-->
                            <!--android:textColor="@color/black"-->
                            <!--android:textSize="12sp" />-->

                            <!--<com.example.grocery.CustomViews.CustomButton-->
                            <!--android:id="@+id/etcheck"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:layout_weight="5"-->
                            <!--android:background="@drawable/custom_border"-->
                            <!--android:fontFamily="@font/roboto"-->
                            <!--android:text="Update"-->
                            <!--android:textColor="@color/colorPrimaryDark"-->
                            <!--android:textSize="12dp" />-->

                            <!--</LinearLayout>-->


                            <!--</LinearLayout>-->

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pricePetailLayout"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"

                        card_view:cardElevation="@dimen/dimen_5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                           <com.example.grocery.CustomViews.CustomEditText

                                android:id="@+id/name_et"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="start"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edittextselector"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/accountloginstart"
                               
                                android:hint="Enter Name"

                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:nextFocusDown="@+id/card_name_et"
                                android:paddingStart="10dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                           <com.example.grocery.CustomViews.CustomEditText
                                android:id="@+id/email_et"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="start"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/edittextselector"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/emailiconstart"
                               
                                android:hint="Enter email"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:nextFocusDown="@+id/card_name_et"
                                android:paddingStart="10dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                           <com.example.grocery.CustomViews.CustomEditText
                                android:id="@+id/mobile_et"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="start"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/edittextselector"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/mobileiconstart"
                               
                                android:hint="Enter mobile"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:nextFocusDown="@+id/card_name_et"
                                android:paddingStart="10dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"

                                android:layout_height="50dp"
                                android:layout_marginBottom="10dp">

                               <com.example.grocery.CustomViews.CustomEditText
                                    android:id="@+id/amount_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="start"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="10dp"
                                    android:background="@drawable/edittextselector"
                                    android:drawablePadding="10dp"
                                    android:editable="false"
                                    android:focusable="false"
                                   
                                    android:hint="Amount"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1"
                                    android:paddingStart="41dp"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <com.example.grocery.CustomViews.CustomTextView

                                    android:id="@+id/currencytext"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerInParent="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginStart="20dp"
                                   
                                    android:gravity="center"
                                    android:paddingTop="0dp"
                                    android:text="$"
                                    android:textColor="@color/iconColor"
                                    android:textSize="18dp" />

                            </RelativeLayout>

                           <com.example.grocery.CustomViews.CustomEditText
                                android:id="@+id/address_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/edittextselector"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/home"
                               
                                android:hint="Enter Address"
                                android:inputType="textMultiLine"
                                android:minLines="2"
                                android:nextFocusDown="@+id/card_name_et"
                                android:paddingBottom="15dp"
                                android:paddingEnd="10dp"
                                android:paddingStart="10dp"
                                android:paddingTop="15dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                           <com.example.grocery.CustomViews.CustomEditText
                                android:id="@+id/comment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginBottom="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/edittextselector"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/comment"
                               
                                android:hint="Any special comment for this order? (Optional)"
                                android:inputType="textMultiLine"
                                android:maxLines="7"
                                android:minLines="3"
                                android:nextFocusDown="@+id/card_name_et"
                                android:paddingBottom="15dp"
                                android:paddingEnd="10dp"
                                android:paddingStart="10dp"
                                android:paddingTop="15dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <Spinner
                                android:id="@+id/countrySignUp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="start"
                                android:layout_marginTop="10dp"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/addressicon"
                               
                                android:hint="Country"
                                android:inputType="text"
                                android:paddingStart="10dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:visibility="gone" />

                            <Spinner
                                android:id="@+id/stateSignUp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="start"
                                android:layout_marginTop="10dp"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/addressicon"
                               
                                android:hint="State"
                                android:inputType="text"
                                android:paddingStart="10dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:visibility="gone" />

                            <Spinner
                                android:id="@+id/citySignUp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="start"
                                android:layout_marginTop="10dp"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/addressicon"
                               
                                android:hint="City"
                                android:inputType="text"
                                android:paddingStart="10dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:visibility="gone" />

                            <Spinner
                                android:id="@+id/pinsignup"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="start"
                                android:layout_marginTop="10dp"
                                android:drawableStart="@drawable/addressicon"
                               
                                android:hint="Pincode"
                                android:inputType="text"
                                android:paddingStart="10dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:visibility="gone" />

                            <Spinner
                                android:id="@+id/areaSignUp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="start"
                                android:layout_marginTop="10dp"
                                android:drawableStart="@drawable/addressicon"
                               
                                android:hint="Pincode"
                                android:inputType="text"
                                android:paddingStart="10dp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/linear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/custom_border"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <com.example.grocery.CustomViews.CustomTextView
                                    android:id="@+id/selectOtherAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                   
                                    android:gravity="center"
                                    android:text="Change Delivery Details"
                                    android:textColor="@color/black"
                                    android:textSize="18dp" />

                                <ImageView
                                    android:id="@+id/location"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="20dp"
                                    app:srcCompat="@drawable/location" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/shadow_finaltop"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">


            <com.example.grocery.CustomViews.CustomButton
                android:id="@+id/cashon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="@string/cash_on_delivery"
                android:textColor="#fff"
                android:visibility="gone" />

            <com.example.grocery.CustomViews.CustomButton
                android:id="@+id/pay_now_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="@string/pay_now"
                android:textColor="#fff"
                android:visibility="gone" />
        </LinearLayout>

        <include

