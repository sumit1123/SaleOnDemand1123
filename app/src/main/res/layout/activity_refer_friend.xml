<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.grocery.Activities.ReferFriendActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbarback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:id="@+id/contact_name"
        android:textSize="18dp"
        android:layout_marginTop="230dp"
        android:gravity="center"
        android:textColor="#000000"/>




    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <com.example.grocery.CustomViews.CustomEditText
        android:id="@+id/contact_number"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/or"
        android:layout_marginLeft="100dp"
        android:background="@drawable/edittextselector"
        android:hint="Enter Contact Number"
        android:inputType="number"
        android:paddingStart="@dimen/dimen_20dp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/contact_list"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/contacts"
        android:backgroundTint="@color/colorPrimary"/>
</LinearLayout>

    <com.example.grocery.CustomViews.CustomButton
        android:id="@+id/send"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="355dp"
        android:background="@color/colorPrimary"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_centerHorizontal="true"
        android:text="@string/send"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16dp"
        android:textStyle="bold" />


</RelativeLayout>
