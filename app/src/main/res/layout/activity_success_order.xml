<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.grocery.Activities.SuccessOrder">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbarback" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/continueShopingCheck"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/complete" />

            <com.example.grocery.CustomViews.CustomTextView
                android:id="@+id/orderSucessText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
               
                android:text="Order Sucess"
                android:textSize="20dp" />

            <com.example.grocery.CustomViews.CustomTextView
                android:layout_gravity="center"
                android:id="@+id/orderPlacedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
               
                android:maxLines="2"
                android:text="Your Order Has bee SucessFully Placed" />

            <com.example.grocery.CustomViews.CustomButton
                android:id="@+id/continueshopping"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/buttonshape"
               
                android:paddingEnd="@dimen/dimen_10dp"
                android:paddingStart="@dimen/dimen_10dp"
                android:text="Continue Shopping"
                android:textColor="#fff"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

    <include
        android:id="@+id/whiteloader"
        layout="@layout/whiteloader" />
</RelativeLayout>
