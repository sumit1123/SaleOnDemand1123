<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.grocery.Activities.WalletActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbarback" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <com.example.grocery.CustomViews.CustomTextView
            android:id="@+id/total_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Total Balance"
            android:textColor="#000"
            android:textSize="15dp" />

        <com.example.grocery.CustomViews.CustomTextView

            android:id="@+id/total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total_amount_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="â‚¹ 0"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_below="@+id/total_amount"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/backgroundfaint"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/addMoneyToWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total_amount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/line2">

            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/total_amount"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/addMoneyToWallet"
                android:background="@drawable/walletimage" />

            <com.example.grocery.CustomViews.CustomTextView

                android:id="@+id/addMoneyToWalletText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="ADD MONEY "
                android:textColor="@color/colorPrimary" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transfer_layout"
            android:layout_below="@+id/total_amount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/line2">

            <ImageView
                android:id="@+id/img_redeem"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/total_amount"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/addMoneyToWallet"
                android:background="@drawable/sharingfund" />

            <com.example.grocery.CustomViews.CustomTextView
                android:id="@+id/sharemoneytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="Redeem"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/line2"
            android:layout_marginTop="30dp"
            android:background="@color/backgroundfaint"
            android:orientation="horizontal">

        </LinearLayout>

        <com.example.grocery.CustomViews.CustomTextView
            android:id="@+id/txnDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:background="#fafafa"
            android:gravity="start"
            android:padding="15dp"
            android:text="Transaction History"
            android:textColor="@color/black"
            android:textDirection="locale"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txnDetails"
            android:background="@color/backgroundfaint"
            android:orientation="horizontal">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/emptytransactionlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginTop="60dp"
            android:visibility="visible">


            <com.example.grocery.CustomViews.CustomTextView
                android:id="@+id/extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="You have not made any transactions till now"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <com.example.grocery.CustomViews.CustomButton
                android:id="@+id/noitemavailablebutton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/buttonshape"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Add Money"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/walletRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1">


        </androidx.recyclerview.widget.RecyclerView>


        <include
            android:id="@+id/whiteloader"
            layout="@layout/whiteloader" />
    </RelativeLayout>
</RelativeLayout>
