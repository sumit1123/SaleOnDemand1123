<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <com.example.grocery.CustomViews.CustomTextView
               
                android:layout_centerVertical="true"
                android:id="@+id/complaintdescription"
                android:textSize="12dp"
                android:text="worst product i have evr senn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <com.example.grocery.CustomViews.CustomTextView
                   

                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:layout_alignParentEnd="true"
android:background="@drawable/buttonshape"
                    android:textSize="10dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:id="@+id/complaintstatus"
                    android:textColor="@color/white"
                    android:text="Solved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"

                    />

        </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.example.grocery.CustomViews.CustomTextView
                android:layout_centerVertical="true"
                android:id="@+id/complainttitle"
                android:textSize="15dp"
                android:textColor="#000"
               

                android:text="Display Break"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.example.grocery.CustomViews.CustomTextView
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/dateofcomplaint"
                android:layout_marginTop="12dp"
                android:textSize="10dp"
                android:text="27-sep-2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:background="@color/backgroundfaint"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </LinearLayout>
</LinearLayout>

</LinearLayout>
