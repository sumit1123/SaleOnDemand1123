<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bigtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:clipToPadding="true"
            app:layout_scrollFlags="scroll|enterAlways"
            android:gravity="center"
            app:popupTheme="@style/ToolbarTheme">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/jjj"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/app_logo"
                        />

                    <com.example.grocery.CustomViews.CustomTextView
                        android:id="@+id/appname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingBottom="10dp"
                        android:visibility="invisible"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/toolsearch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <ImageView
                                android:id="@+id/searchtoolbar"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/searchwhite" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/toolnoti"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <ImageView
                                android:id="@+id/notificationtoolbar"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/notificationwhite" />

                            <com.example.grocery.CustomViews.CustomTextView
                                android:id="@+id/notification_count_textview"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="end"
                                android:layout_marginStart="12dp"
                                android:background="@drawable/circle"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:textSize="8dp"
                                android:visibility="gone" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/toolcart"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <!-- Menu Item Image -->
                            <ImageView
                                android:id="@+id/carttoolbar"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:clickable="false"
                                app:srcCompat="@drawable/cart" />

                            <!-- Badge Count -->
                            <com.example.grocery.CustomViews.CustomTextView
                                android:id="@+id/actionbar_notifcation_textview"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="end"
                                android:layout_marginStart="12dp"
                                android:background="@drawable/circle"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:textSize="8dp"
                                android:visibility="visible" />

                        </RelativeLayout>


                    </LinearLayout>


                </RelativeLayout>


            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

     <RadioGroup
         android:id="@+id/search_radio_group"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginStart="5dp"
         android:layout_marginEnd="5dp"
         android:layout_below="@+id/toolbar">

        <RadioButton
            android:id="@+id/rd_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/white"
            android:checked="true"
            android:text="@string/product"
            />

         <RadioButton
             android:id="@+id/rd_seller"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:buttonTint="@color/white"
             android:text="@string/seller"
             />


     </RadioGroup>

        <com.example.grocery.CustomViews.CustomEditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/search_radio_group"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/curved_border"
            android:drawableStart="@drawable/searchgrey"
            android:drawablePadding="5dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textAlignment="viewStart"
            android:textSize="12dp" />
    </RelativeLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout

        android:id="@+id/swipeRefreshLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bigtoolbar">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:orientation="vertical">

            <include
                android:id="@+id/whiteloader"
                layout="@layout/whiteloader" />


            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:orientation="vertical"
                    android:weightSum="1"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    tools:context="com.example.grocery.Activities.Dashboard"
                    tools:showIn="@layout/app_bar_dashboard">

                    <RelativeLayout
                        android:id="@+id/sliderVisibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:visibility="visible"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:background="@color/grey"
                            android:paddingTop="1dp">

                            <com.example.grocery.utils.ViewPagerCustomDuration
                                android:id="@+id/pager"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:layout_alignParentTop="true"
                                android:overScrollMode="never" />

                            <com.example.grocery.SliderPackage.CirclePageIndicator
                                android:id="@+id/indicator"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:gravity="bottom"
                                android:padding="10dip"
                                app:centered="true"
                                app:fillColor="@color/colorPrimary"
                                app:pageColor="@color/grey"
                                app:snap="false" />
                        </RelativeLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/shopbycategoryvisibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recshopby"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            android:nestedScrollingEnabled="false" />

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/viewAllCategoriesText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/recshopby"
                            android:layout_gravity="center"
                            android:background="@color/backgroundfaint"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="View all >"
                            android:textColor="#000"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/topseller"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/topSellerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Top Sellers"
                            android:textColor="#333"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rectopsellers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/topSellerText"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="8dp"
                            android:nestedScrollingEnabled="false"
                            android:orientation="horizontal"
                            app:reverseLayout="true">

                        </androidx.recyclerview.widget.RecyclerView>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/cardlatest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/latestProductText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="New Arrival"
                            android:textColor="#333"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recpopularproduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/latestProductText"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="8dp"
                            android:nestedScrollingEnabled="false"
                            android:orientation="horizontal"
                            app:reverseLayout="true">

                        </androidx.recyclerview.widget.RecyclerView>


                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/offerBlocks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    </androidx.recyclerview.widget.RecyclerView>

                    <RelativeLayout
                        android:id="@+id/cardrecentproducts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/recentViewedProductText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Recently Viewed Products"
                            android:textColor="#333"
                            android:textSize="17dp"
                            android:textStyle="bold" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recrecentproduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recentViewedProductText"
                            android:layout_marginTop="8dp"
                            android:nestedScrollingEnabled="false"
                            android:visibility="visible">

                        </androidx.recyclerview.widget.RecyclerView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/featuredbrands"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/recentfeaturedBrandText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:text="Featured Brands"
                            android:textColor="#333"
                            android:textSize="17dp"
                            android:textStyle="bold" />


                        <com.example.grocery.utils.ViewPagerCustomDuration
                            android:id="@+id/recfeaturedbrands"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/recentfeaturedBrandText"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:nestedScrollingEnabled="false">

                        </com.example.grocery.utils.ViewPagerCustomDuration>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cardmaxproducts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/maxViewedProductsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignStart="@+id/recmaxproduct"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="17dp"
                            android:text="Max Viewed"
                            android:textColor="#333"
                            android:textSize="17dp"
                            android:textStyle="bold" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recmaxproduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/maxViewedProductsText"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            android:nestedScrollingEnabled="false"
                            android:visibility="visible"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">

                        </androidx.recyclerview.widget.RecyclerView>


                    </RelativeLayout>


                </LinearLayout>


            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        android:id="@+id/loaderBlurred"
        layout="@layout/blurredloader" />

    <RelativeLayout

        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@+id/noitemavalable1"
        layout="@layout/activity_noitem"
        android:visibility="gone" />

</RelativeLayout>


