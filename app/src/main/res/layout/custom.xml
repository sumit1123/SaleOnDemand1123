<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff">



    <com.example.grocery.CustomViews.CustomTextView
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Exit Cheap Stuffs"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
      />
    <com.example.grocery.CustomViews.CustomTextView
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/text1"
        android:text="Are You Sure To Want To Exit Cheap Stuffs?"
        android:layout_below="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        />
<LinearLayout
    android:gravity="right"
    android:layout_marginTop="13dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/text1"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true">

    <com.example.grocery.CustomViews.CustomButton
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#ff0000"
android:id="@+id/canceldialogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/text1"
        />
    <com.example.grocery.CustomViews.CustomButton
        android:textColor="#ff0000"
        android:layout_width="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/dialogButtonOK"
        android:layout_height="wrap_content"
        android:text="YES"
        android:layout_below="@+id/text1"
        />
</LinearLayout>

</RelativeLayout>