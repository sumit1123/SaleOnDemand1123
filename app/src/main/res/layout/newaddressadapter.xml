<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:padding="@dimen/dimen_10dp"
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_toStartOf="@+id/rightlinear"
        android:orientation="vertical">

        <com.example.grocery.CustomViews.CustomTextView
            android:id="@+id/name"
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afzal Khan"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <com.example.grocery.CustomViews.CustomTextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
           
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2704 A-1 new Anand Nagar Adhartal near petrol pumpadhartal near gas agency anand nagar"
            android:textColor="@color/iconColor"
            android:textSize="15dp" />
        <com.example.grocery.CustomViews.CustomTextView
            android:id="@+id/pincode"
            android:layout_width="wrap_content"
           

            android:layout_height="wrap_content"
            android:text="482002"
            android:textColor="@color/iconColor"
            android:textSize="15dp" />
        <com.example.grocery.CustomViews.CustomTextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
           

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:text="+91 7566500977"
            android:textColor="@color/iconColor"
            android:textSize="15dp" />



    </LinearLayout>
<LinearLayout
    android:padding="@dimen/dimen_10dp"
    android:id="@+id/rightlinear"
    android:layout_alignParentEnd="true"
android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <com.example.grocery.CustomViews.CustomButton
        android:visibility="visible"
        android:id="@+id/select"
        android:layout_width="wrap_content"
       
        android:layout_height="35dp"
        android:background="@drawable/buttonshape"
        android:text="Select"
        android:textColor="@color/white" />
    <ImageView
        android:id="@+id/editOption"

        android:padding="@dimen/dimen_10dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/select"
        app:srcCompat="@drawable/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

    <LinearLayout

        android:paddingTop="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backgroundfaint"></LinearLayout>
</RelativeLayout>
