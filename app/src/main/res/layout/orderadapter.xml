<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.grocery.CustomViews.CustomTextView
                android:id="@+id/orderid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="OrderId"
                android:textColor="#000"
                android:textSize="18dp" />

            <LinearLayout
                android:id="@+id/adsx"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/orderid"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

            </LinearLayout>

            <com.example.grocery.CustomViews.CustomTextView
                android:id="@+id/totalorderprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="1500"
                android:textColor="#000"
                android:textSize="15dp" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.grocery.CustomViews.CustomTextView
                    android:id="@+id/deliveryindicator"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circlebackground" />

                <com.example.grocery.CustomViews.CustomTextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_below="@+id/adsx"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Delivered"
                    android:textSize="12dp"

                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/giverating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@drawable/custom_border"
                    android:gravity="center">

                    <!--<com.willy.ratingbar.ScaleRatingBar-->
                        <!--android:id="@+id/rating"-->
                        <!--style="@style/Base.Widget.AppCompat.RatingBar.Small"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:clickable="false"-->
                        <!--android:paddingTop="2dp"-->
                        <!--android:stepSize=".1"-->
                        <!--app:srb_scrollable="false"-->
                        <!--app:srb_starHeight="5dp"-->
                        <!--app:srb_starPadding="0sp"-->
                        <!--app:srb_starWidth="5dp" />-->

                    <com.willy.ratingbar.ScaleRatingBar
                        android:id="@+id/rating"
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="2dp"
                        android:stepSize=".1"
                        app:srb_scrollable="false"
                        app:srb_starHeight="12dp"
                        app:srb_starPadding="0sp"
                        app:srb_starWidth="12dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="5"

                    android:background="@drawable/custom_border"
                    android:gravity="center">

                    <com.example.grocery.CustomViews.CustomTextView
                        android:id="@+id/writeareviewText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/rating"
                        android:gravity="end"
                        android:text="WRITE A REVIEW"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13dp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>
