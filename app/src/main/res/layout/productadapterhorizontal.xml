<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/vvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">


        <FrameLayout
            android:id="@+id/sdxz"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/productimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                 />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/wishlistLayout"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp">

                    <ImageView
                        android:id="@+id/wishlistImage"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/wishlist" />

                </FrameLayout>

                <ProgressBar

                    android:id="@+id/progressbar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>


        </FrameLayout>

        <RelativeLayout
            android:id="@+id/sds"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/sdxaz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.grocery.CustomViews.CustomTextView
                    android:id="@+id/productname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="7dp"
                    android:ellipsize="end"
                   
                    android:maxLines="2"
                    android:text="SubCateName"
                    android:textColor="@color/adaptertextcolorheading"
                    android:textSize="14dp" />

                <com.example.grocery.CustomViews.CustomTextView
                    android:id="@+id/productdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Brand"
                    android:textSize="12dp" />

                <LinearLayout
                    android:id="@+id/wholeVariantlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">


                    <com.example.grocery.CustomViews.CustomTextView
                        android:id="@+id/parentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:drawableEnd="@drawable/dropdownend"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="Tag1"
                        android:textDirection="locale"
                        android:textSize="13dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.example.grocery.CustomViews.CustomTextView
                        android:id="@+id/sellingprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1499"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <com.example.grocery.CustomViews.CustomTextView
                        android:id="@+id/actualprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/sellingprice"
                        android:text="actualprice"
                        android:textColor="#A9A9A9"
                        android:textSize="12dp" />

                    <com.example.grocery.CustomViews.CustomTextView
                        android:id="@+id/percentoff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                       
                        android:padding="3dp"
                        android:text="%off"
                        android:textColor="@color/green"
                        android:textDirection="locale"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/sdxaz"
                    android:orientation="horizontal"
                    android:weightSum="10">


                    <RelativeLayout
                        android:id="@+id/addlayout"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1">


                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout

                    android:id="@+id/visibility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"


                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="2dp"
                           
                            android:text="4.0"
                            android:textAlignment="gravity"
                            android:textColor="@color/black"
                            android:textDirection="ltr"
                            android:textSize="12dp" />


                    </LinearLayout>

                    <com.willy.ratingbar.ScaleRatingBar
                        android:id="@+id/raingbar"
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:paddingTop="2dp"
                        android:stepSize=".1"
                        app:srb_scrollable="false"
                        app:srb_starHeight="12dp"
                        app:srb_starPadding="0sp"
                        app:srb_starWidth="12dp" />

                    <com.example.grocery.CustomViews.CustomTextView
                        android:id="@+id/ratingcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:text="(2,875)"

                        android:textColor="#A9A9A9"
                        android:textSize="12dp"
                        android:visibility="gone" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relvirtual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:id="@+id/visibility1"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shapestars"
                            android:orientation="horizontal">

                            <com.example.grocery.CustomViews.CustomTextView
                                android:id="@+id/rating1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="2dp"
                               
                                android:text="4.0"
                                android:textColor="#fff"
                                android:textSize="10dp" />

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="3dp"
                                app:srcCompat="@drawable/ic_star_black_24dp" />

                        </LinearLayout>

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/ratingcount1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="(2,875)"
                            android:textColor="#A9A9A9"
                            android:textSize="12dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.example.grocery.CustomViews.CustomButton
                        android:id="@+id/addQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/buttonshape"
                        android:elevation="0dp"
                       
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingEnd="10dp"
                        android:stateListAnimator="@null"
                        android:text="ADD"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:visibility="visible" />


                    <LinearLayout
                        android:id="@+id/cardaddquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="9dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <RelativeLayout
                            android:id="@+id/minus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:background="@drawable/buttonshape"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:srcCompat="@drawable/minuswhite" />
                        </RelativeLayout>

                        <com.example.grocery.CustomViews.CustomTextView
                            android:id="@+id/quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="12dp"
                            android:layout_marginStart="12dp"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <RelativeLayout

                            android:id="@+id/plus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:background="@drawable/buttonshape"
                                android:padding="5dp"
                                app:srcCompat="@drawable/addwhite" />
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/vvv"
        android:layout_marginTop="5dp"
        android:background="@color/backgroundfaint">

    </LinearLayout>
</RelativeLayout>
